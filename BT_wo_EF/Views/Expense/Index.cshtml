@model System.Data.DataTable
@{
    ViewBag.Title = "Index";
}

<div class="jumbotron">
    <h1 class="text-center">List of Expenses</h1>
</div>

<table class="table table-bordered">
    <tr>
        <th> Title </th>
        <th> Type </th>
        <th> Amount </th>
        <th> Edit / Delete </th>
    </tr>
    @for (int i=0; i<Model.Rows.Count; i++)
            {
                <tr>
                    <td> @Model.Rows[i][1]</td>
                    <td> @Model.Rows[i][2]</td>
                    <td> @Model.Rows[i][3]</td>
                    <td>
                        <a href="@Url.Action("Edit","Expense", new { @id = Model.Rows[i][0] })"> Edit </a>  /
                        <a href="@Url.Action("Delete","Expense", new { @id = Model.Rows[i][0] })"> Delete </a>
                    </td>
                </tr>
            }
</table>

<a href="@Url.Action("Create", "Expense") "> Add Expense </a>